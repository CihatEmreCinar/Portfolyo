@model User
@{
    ViewData["Title"] = "Login";
    Layout = null;
    <!-- _Layout olmadan boş bir sayfa -->
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #27445D; /* Sayfa arka planı */
        }

        .card {
            background-color: #497D74; /* Kart arka planı */
            color: #EFE9D5; /* Kart metni rengi */
        }

        .btn-primary {
            background-color: #71BBB2; /* Buton rengi */
            border-color: #71BBB2; /* Buton border rengi */
        }

            .btn-primary:hover {
                background-color: #27445D; /* Buton hover rengi */
                border-color: #27445D; /* Buton hover border rengi */
            }

        .card-title {
            color: #EFE9D5; /* Başlık metni rengi */
        }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100">

    <div class="card" style="width: 100%; max-width: 400px;">
        <div class="card-body">
            <h2 class="card-title text-center">Login</h2>
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
            }
            <form method="post" >
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" asp-for="Username" class="form-control" id="username" name="username" placeholder="Enter your username">
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="password" name="password" placeholder="Enter your password">
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


